<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="#F2F2F2"
        android:layout_height="match_parent">
<!--        <com.google.android.material.appbar.AppBarLayout-->
<!--            android:background="#F2F2F2"-->
<!--            app:layout_constraintTop_toTopOf="parent"-->
<!--            app:layout_constraintLeft_toLeftOf="parent"-->
<!--            android:layout_width="match_parent"-->
<!--            app:elevation="0dp"-->
<!--            android:theme="@style/AppTheme.AppBarOverlay"-->

<!--            android:layout_height="wrap_content">-->
            <LinearLayout
                android:id="@+id/index_head_bar"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_width="wrap_content"
                    android:text="特别关注"
                    android:includeFontPadding="false"
                    android:textStyle="bold"
                    android:layout_marginTop="11dp"
                    android:layout_marginLeft="10dp"
                    android:textSize="23dp"
                    android:textColor="@color/color333333"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:layout_width="17dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="5dp"
                    android:layout_marginRight="10dp"
                    android:src="@mipmap/index_help"
                    android:layout_height="17.5dp"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>

<!--        </com.google.android.material.appbar.AppBarLayout>-->
        <androidx.cardview.widget.CardView
            android:id="@+id/index_card_view"
            app:layout_constraintTop_toBottomOf="@+id/index_head_bar"
            app:layout_constraintLeft_toLeftOf="@+id/index_head_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:cardBackgroundColor="@color/white"
            app:cardPreventCornerOverlap="true"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="19.5dp"
            app:cardElevation="0dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">

                <com.android.library.YLCircleImageView
                    android:id="@+id/avatar"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    app:radiusYL="60dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:src="@mipmap/avatar"/>

                <LinearLayout
                    android:id="@+id/llUser"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintLeft_toRightOf="@id/avatar"
                    app:layout_constraintTop_toTopOf="@id/avatar"
                    android:layout_marginLeft="4dp"
                    app:layout_constraintBottom_toBottomOf="@id/avatar">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/kithNote"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:text="你baaa"
                            android:textColor="@color/blackText"/>
                        <RelativeLayout
                            android:id="@+id/rlEdit"
                            android:layout_width="40dp"
                            android:layout_height="25dp">
                            <ImageView
                                android:id="@+id/edit"
                                android:layout_width="13dp"
                                android:layout_height="13dp"
                                android:visibility="visible"
                                android:layout_centerInParent="true"
                                android:layout_marginLeft="10dp"
                                android:src="@mipmap/dark_edit"/>
                        </RelativeLayout>

                    </LinearLayout>
                    <TextView
                        android:id="@+id/timeDesc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/gray_text"
                        android:textSize="12sp"
                        android:text="色地方上的"
                        />
                </LinearLayout>



                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/rightarrow"
                    app:layout_constraintTop_toTopOf="@id/avatar"
                    app:layout_constraintBottom_toBottomOf="@id/avatar"
                    app:layout_constraintRight_toRightOf="parent"
                    />

                <View
                    android:id="@+id/line"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#EEEEEE"
                    app:layout_constraintTop_toBottomOf="@id/avatar"
                    android:layout_marginTop="10dp"
                    />

                <ImageView
                    android:id="@+id/ivloc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    app:layout_constraintTop_toBottomOf="@id/line"
                    app:layout_constraintLeft_toLeftOf="@id/line"
                    android:src="@mipmap/location"/>

                <TextView
                    android:id="@+id/location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintLeft_toRightOf="@id/ivloc"
                    app:layout_constraintTop_toTopOf="@id/ivloc"
                    app:layout_constraintBottom_toBottomOf="@id/ivloc"
                    android:layout_marginLeft="10dp"
                    android:textColor="#FF999999"
                    android:textSize="12sp"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <androidx.constraintlayout.widget.ConstraintLayout

            app:layout_constraintTop_toBottomOf="@+id/index_card_view"
            app:layout_constraintLeft_toLeftOf="@+id/index_card_view"
            android:layout_width="match_parent"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"

            android:layout_marginTop="20dp"
            android:layout_height="wrap_content">
            <ImageView
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:src="@mipmap/magic_location"
                android:layout_width="168dp"
                android:layout_height="46dp"/>
            <ImageView
                android:layout_width="168dp"
                android:layout_height="46dp"
                android:adjustViewBounds="true"
                android:src="@mipmap/one_key_location"
                app:layout_constraintStart_toStartOf="parent"
                tools:layout_editor_absoluteY="0dp" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>